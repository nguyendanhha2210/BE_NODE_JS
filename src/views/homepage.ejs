<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node.JS Basic</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>
    <div class="w3-container">
        <h2>List users Table</h2>
        <%=dataUser.length %>
            <table class="w3-table-all w3-hoverable">
                <thead>
                    <tr class="w3-light-grey">
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i < dataUser.length; i++) { %>
                        <tr>
                            <td>
                                <%= dataUser[i].id %>
                            </td>
                            <td>
                                <%= dataUser[i].firstName %>
                            </td>
                            <td>
                                <%= dataUser[i].lastName %>
                            </td>
                            <td style="display: flex; gap: 15px;">
                                <form>
                                    <a class="btn-detail" href="/detail/user/<%= dataUser[i].id %>"
                                        target="_blank">Detail</a>
                                </form>
                                <form action="/edit-user/<%= dataUser[i].id %>" method="GET">
                                    <button type="submit">Edit</button>
                                </form>
                                <form action="/delete-user" method="POST">
                                    <input type="text" hidden value="<%= dataUser[i].id %>" name="userId" />
                                    <button type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
    </div>
</body>

</html>